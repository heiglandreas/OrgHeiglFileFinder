{
    "name" : "org_heigl/filefinder",
    "type" : "library",
    "description": "Generate a filtered filelist from one or more folders",
    "keywords": ["file","find", "filelist", "list", "folder", "sort", "sortable"],
    "homepage": "https://github.com/heiglandreas/OrgHeiglFileFinder",
    "license": "MIT",
    "authors": [{
        "name": "Andreas Heigl",
        "email": "andreas@heigl.org",
        "homepage": "http://andreas.heigl.org",
        "role": "Developer"
    }],
    "require" : {
        "php" : "^7.1",
        "roave/better-reflection": "^3"
    },
    "require-dev" : {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit" : "^7.0",
        "codeclimate/php-test-reporter": "dev-master"
    },
    "minimum-stability" : "dev",
    "prefer-stable" : true,
    "autoload": {
        "psr-4": {
            "Org_Heigl\\FileFinder\\": "src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Org_Heigl\\FileFinderTest\\": "tests/"
        }
    }
}
